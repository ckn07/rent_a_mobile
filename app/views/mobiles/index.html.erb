<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path 'banner-phone.png' %>);">
  <div class="banner-content">
    <h1>Find the mobile of your dreams</h1>
    <p>Discover our daily rents</p>
    <a class="btn btn-form btn-lg" href="#mobiles_list">Start now</a>
  </div>
</div>

<div id="mobiles_list"></div>
<div class="card-index-layout">
  <div class="cards-section">
    <div class="cards-title text-center" >
      <h2>Choose a mobile</h2>
    </div>

      <div class="cards-container">
        <% @mobiles.each do |mobile| %>

          <div class="card">
            <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path mobile.photo %>');">
              <%= link_to "#{mobile.brand}", mobile_path(mobile), class: 'card-category' %>
            </div>

            <div class="card-footer">
              <p><%= link_to "#{mobile.brand} - #{mobile.model}", mobile_path(mobile), class: 'card-link' %></p>
              <p class="owner"><%= "#{mobile.user.first_name}"%></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="map-container-show">
    <div
      id="map"
      style="width: 100%;
      height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
  </div>
  </div>
<!--  <div class="map-container">MAP</div> -->


</div>


