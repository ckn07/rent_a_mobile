<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= asset_path 'banner-phone.png' %>);">
  <div class="banner-content">
    <h1>Trouvez le mobile parfait</h1>
    <p>Découvrez nos locations à la journée.</p>
    <!-- <a class="btn btn-primary btn-lg">Start now</a> -->
  </div>
</div>


<div class="card-index-layout">
  <div class="card-section">
    <h2 class="text-center">Choose a mobile</h2>

      <div class="cards-container">
        <% @mobiles.each do |mobile| %>

            <div class="card">
              <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path mobile.photo %>');">
                <%= link_to "#{mobile.brand}", mobile_path(mobile), class: 'card-category' %>
              </div>

              <div class="card-footer">
                <p><%= link_to "#{mobile.brand} - #{mobile.model}", mobile_path(mobile), class: 'card-link' %></p>
                <div class="controls">
                  <a href="#"><i class="fa fa-star"></i></a>
                  <a href="#"><i class="fa fa-heart"></i></a>
                  <a href="#"><i class="fa fa-share"></i></a>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
<!--  <div class="map-container">MAP</div> -->
  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>
</div>


