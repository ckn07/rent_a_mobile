<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>What did you think of the
      <%= "#{@mobile.brand} #{@mobile.model}"  %>
      </h1>

      <h3>Add a review</h3>
      <%= simple_form_for [@mobile, @booking, @review] do |f| %>
        <%= f.input :star, collection: 0..5 %>
        <%= f.input :content %>
        <%= f.submit class: "btn btn-primary"%>
      <% end %>

    </div>


  </div>
</div>

